<!--            android:text="Product Description"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/cardview_dark_background"-->
<!--            android:textSize="16dp" />-->




    </RelativeLayout>

</androidx.cardview.widget.CardView>