<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/cardview_dark_background"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/shop_image"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/shop_address"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Shop Address"
            android:layout_below="@+id/shop_name"
            android:layout_toRightOf="@+id/shop_image"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shop_address"
            android:layout_toRightOf="@+id/shop_image"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="35dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rating_dzn"
            android:orientation="horizontal"
            android:padding="1dp"
            android:layout_toRightOf="@+id/shop_image"
            android:layout_marginStart="-10dp"
            android:layout_below="@+id/shop_address">

            <TextView
                android:id="@+id/tv_shoplayout_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.5"
                android:textColor="@color/whitebg"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@mipmap/star_png" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_layout_location_img"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:background="@drawable/map_location"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorAccent"
                android:elevation="15dp"/>

            <TextView
                android:id="@+id/shop_layout_distance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#BE272727"
                android:textStyle="italic"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="10.2km"/>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/gender_design"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/shop_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop for"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black_overlay"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>




<!--        <TextView-->
<!--            android:id="@+id/product_description"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/product_price"-->
